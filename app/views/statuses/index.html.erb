<div class="col-md-2">
 
</div>
<div class="col-md-8">
<% if user_signed_in? %>
<div>
    <h1>What's new with your friends?</h1>
</div>

<%= link_to "Post a New Status", feed_create_path, class: "btn btn-primary" %>

<% @statuses.each do |status| %>
    <div class="status">
     <div class="row">
      <div class="col-md-2">
        <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user) %>
      </div>
      <div class="col-md-10">
        <strong><%= link_to status.user.full_name, profile_path(status.user) %></strong>
        <p><%= status.content %></p>
        <div class="meta">
            <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
            <span class="admin">
            <% if status.user_id == current_user.id %>
                | <%= link_to "Edit", edit_status_path(status) %> |
                <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status for " + status.user.full_name + "?" } %>
            <% end %>
            </span>
        </div>
      </div>
     </div>
    </div>
<% end %>
<% else %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
        <fieldset>
            <legend>Sign up!</legend>
            
            <%= devise_error_messages! %>

            <div><%= f.input :first_name, autofocus: true %></div>

            <div><%= f.input :last_name %></div>

            <div><%= f.input :profile_name %></div>

            <div><%= f.input :email %></div>

            <div><%= f.input :password, autocomplete: "off" %></div>

            <div><%= f.input :password_confirmation, autocomplete: "off" %></div>

            <div>
                <%= button_tag(type: 'submit', class: "btn btn-success") do %>
                    Register
                <% end %>
            </div>
        </fieldset>
    <% end %>
<% end %>
</div>
