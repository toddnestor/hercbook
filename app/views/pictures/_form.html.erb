
<div class="col-md-6">
  <%= simple_form_for([@album, @picture], html: {class: 'form-horizontal'}) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-group">
      <%= f.input :asset, as: :file, input_html: { class: 'form-control' }, label: 'Picture' %>
      <%= bootstrap_paperclip_picture f, :asset %>
      <%= f.input :caption, input_html: { class: 'form-control' } %>
      <%= f.input :description, input_html: { class: 'form-control', rows: 4 } %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
