<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :parent_type, as: :hidden %>
    <%= f.input :parent_id, as: :hidden %>
    <%= f.input :content, input_html: {placeholder: "Add a comment..."} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
