<div class="page-header">
  <h1><%= avatar_profile_link @user, {class: 'img-circle'} %><%= @user.full_name %></h1>
</div>

<% if signed_in? %>
<div id="friend-status" style="margin-bottom: 10px;">
  <% if current_user.friends.include?(@user) || current_user.pending_friends.include?(@user) || current_user.requested_friends.include?(@user) || current_user.blocked_friends.include?(@user) %>
    <%= link_to "Edit Friendship", edit_user_friendship_path(friend_id: @user), class: 'btn btn-primary' %>
  <% else %>
    <%= link_to "Add Friend", new_user_friendship_path(friend_id: @user), class: 'btn btn-primary', id: 'add-friendship', data: { friend_id: @user.to_param } %>
  <% end %>
  <%= link_to "Albums", albums_path(@user), class: 'btn btn-success' %>
</div>
<% end %>

<% if @statuses %>
  <% @statuses.each do |status| %>
    <div class="well">
      <%= status.content %>
      <hr />
      <%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
    </div>
  <% end %>
<% end %>
