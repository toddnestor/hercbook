<div class="page-header">
    <h1>Friends</h1>
</div>

<div>
    <strong>Friend List:</strong>
    <%= link_to 'Active Friends', user_friendships_path(list: 'friends') %> | 
    <%= link_to 'Pending Friend Requests', user_friendships_path(list: 'pending') %> | 
    <%= link_to 'Friend Requests awaiting your approval', user_friendships_path(list: 'requested') %> | 
    <%= link_to 'Blocked Users', user_friendships_path(list: 'blocked') %>
</div>

<% @user_friendships.each do |friendship| %>
    <% friend = friendship.friend %>
    <div id="<%= dom_id(friendship) %>" class="friend row" style="margin-bottom: 10px;">
        <div class="col-md-1">
            <%= avatar_profile_link friend, {class: 'img-circle'} %>
        </div>
        <div class="col-md-7">
            <strong><%= friend.full_name %></strong><br />
            <% if friendship.pending? %>
                <em>Friendship is pending.</em> <%= link_to "Delete request", edit_user_friendship_path(friendship.friend.profile_name) %>.
            <% end %>
            <% if friendship.requested? %>
                <em>Friendship requested.</em> <%= link_to "Accept friendship", edit_user_friendship_path(friendship.friend.profile_name) %>.
            <% end %>
            <% if friendship.accepted? %>
                <em>You have been friends for <%= time_ago_in_words(friendship.updated_at) %>.</em> <%= link_to "Update friendship", edit_user_friendship_path(friendship.friend.profile_name) %>.
            <% end %>
        </div>
    </div>
<% end %>
